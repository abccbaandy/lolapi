<link href="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css" rel="stylesheet">
<%= session[:api] %>
<%= session[:errCode] %>
<div class="col-md-4 col-md-offset-4">
<%= form_for :guest , :html => { :id => "guest", :class => "form-horizontal", :role => "form" } do |f| %>
 
  <div class ="form-group row">
    <%= f.label "Summoner Name" , :class => "col-md-6 control-label"%>
    <div class="col-md-6">
        <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-6 col-md-offset-4">
        <%= f.submit "search", :class => "btn btn-primary"%>
    </div>
  </div>

<% end %>

<%= link_to "say hello", { :controller => "lol", :action => "runepage" }, :id => "ajax-load"  %>
<div id="content">
</div>
</div>


<div id="loadingIMG" ><img src="loading.gif" height='100'/>資料處理中，請稍後。</div>

</div>
<script src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
<script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
        $('img').tooltip();
        $('#loadingIMG').hide();
        $('#ajax-load').click( function(){
            $('#loadingIMG').show();
            $('#content').load( $(this).attr("href") )
            
            return false;
        });
        
        $( document ).ajaxStop(function() {
            $('#loadingIMG').hide();
        });
    });
</script>
